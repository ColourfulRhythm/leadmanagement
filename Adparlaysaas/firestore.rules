rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to forms for form preview functionality
    match /forms/{formId} {
      allow read: if true;  // Anyone can read forms (including published forms)
      allow write: if request.auth != null;  // Only authenticated users can write
      allow update: if true;  // Allow updates for submission counting (leads can update submission count)
    }
    
    // Allow authenticated users to read/write form responses
    match /formResponses/{responseId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public write access to form submissions for lead capture
    match /formSubmissions/{submissionId} {
      allow read: if request.auth != null;  // Only authenticated users can read submissions
      allow create: if true;  // Anyone can submit forms (leads)
      allow update, delete: if request.auth != null;  // Only authenticated users can modify/delete
    }
    
    // Allow authenticated users to read/write user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write customization settings
    match /customization/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to linkOrganizers for username-based sharing
    match /linkOrganizers/{linkOrganizerId} {
      allow read: if true;  // Anyone can read link organizers (for public sharing)
      allow write: if request.auth != null;  // Only authenticated users can write
    }
    
    // Default rule for other collections - require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
